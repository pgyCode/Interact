<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/color_cheng">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingTop="18dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="18dp"
        android:scaleType="fitCenter"
        android:id="@+id/btn_back"
        android:background="@color/touming"
        android:src="@drawable/backer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/view_one"
        android:gravity="center"
        android:paddingBottom="120dp"
        android:background="@color/color_cheng"
        android:layout_below="@id/btn_back"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_head"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="测试昵称"
            android:id="@+id/txt_nick"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btn_add"
            android:text="添加"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/white_border_bg"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/view_none"
        android:paddingBottom="120dp"
        android:layout_below="@id/btn_back"
        android:background="@color/color_cheng"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/white_oval_bg"
            android:text="当前不存在该用户"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="确认"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_sure"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/white_border_bg"
            android:textColor="@color/white" />
    </LinearLayout>

    <requestFocus/>

    <ViewStub
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading"
        android:layout="@layout/loading"/>
</RelativeLayout>