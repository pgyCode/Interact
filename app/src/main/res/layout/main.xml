<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/color_cheng"
            android:fitsSystemWindows="true"
            android:clipToPadding="true"
            android:layout_height="73dp">
            <ImageView
                android:layout_width="57dp"
                android:layout_height="50dp"
                android:paddingLeft="7dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:id="@+id/img_head"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/ic_launcher_round"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:id="@+id/txt_title"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_width="70dp"
                android:id="@+id/btn_new_friend"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="12dp"
                    android:src="@drawable/friend_new_friend"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:paddingLeft="3dp"
                    android:gravity="left|center_vertical"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="0"
                    android:id="@+id/txt_request"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:id="@+id/all"
            android:layout_weight="1">

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/mygrew"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_height="67dp">
            <RelativeLayout
                android:layout_width="0px"
                android:id="@+id/btn_msg"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:id="@+id/msg_continer">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:id="@+id/img_chat"
                        android:layout_height="30dp"
                        android:src="@drawable/main_msg_in"/>
                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/red_oval_bg"
                        android:gravity="center"
                        android:text="12"
                        android:id="@+id/txt_unread"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_below="@id/msg_continer"
                    android:textStyle="bold"
                    android:id="@+id/txt_chat"
                    android:visibility="gone"
                    android:text="消息"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/btn_friend"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_height="30dp"
                    android:id="@+id/img_friend"
                    android:src="@drawable/main_friend_out"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:id="@+id/txt_link"
                    android:text="联系人"
                    android:visibility="gone"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:id="@+id/btn_own"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:id="@+id/img_leaf"
                    android:layout_height="30dp"
                    android:src="@drawable/main_leaf_out"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:id="@+id/txt_leaf"
                    android:text="生活"
                    android:visibility="gone"
                    android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>