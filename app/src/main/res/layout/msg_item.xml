<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="30dp"-->
            <!--android:gravity="center_vertical|left"-->
            <!--android:paddingLeft="7dp"-->
            <!--android:textSize="13sp"-->
            <!--android:textColor="@color/white"-->
            <!--android:text="好友消息"-->
            <!--android:id="@+id/txt_category"-->
            <!--android:background="@color/T_color_txt_grew"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:layout_width="70dp"
                android:padding="13dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_height="70dp"
                android:id="@+id/img_head"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="下午2:30"
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                android:textColor="@color/T_color_txt_grew"
                android:layout_alignParentRight="true"
                android:id="@+id/txt_time"
                android:gravity="center" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="昵称"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="bottom"
                android:paddingBottom="4dp"
                android:id="@+id/txt_nickname"
                android:layout_toLeftOf="@id/txt_time"
                android:layout_toRightOf="@id/img_head"/>

            <TextView
                android:id="@+id/txt_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/txt_msg"
                android:layout_alignBottom="@+id/txt_msg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/red_oval_bg"
                android:gravity="center"
                android:minWidth="20dp"
                android:text="99"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/txt_nickname"
                android:layout_toLeftOf="@id/txt_num"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/T_color_txt_grew"
                android:paddingLeft="10dp"
                android:text="最后一条对sdsdsd话" />
        </RelativeLayout>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/T_color_divider_hui"/>-->
    </LinearLayout>
</RelativeLayout>
