<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="80dp"
            android:padding="20dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="80dp"
            android:id="@+id/img_head"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="昵称"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="bottom"
            android:paddingBottom="4dp"
            android:id="@+id/txt_nickname"
            android:layout_toLeftOf="@id/txt_time"
            android:layout_toRightOf="@id/img_head"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="id"
            android:layout_below="@id/txt_nickname"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingBottom="4dp"
            android:id="@+id/txt_talkid"
            android:layout_toLeftOf="@id/txt_time"
            android:layout_toRightOf="@id/img_head"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="同意"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_agree"
            android:textColor="@color/white"
            android:background="@drawable/green_radius_bg"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="拒绝"
            android:textSize="15sp"
            android:id="@+id/btn_disagree"
            android:layout_toLeftOf="@id/btn_agree"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/red_radius_bg"/>
    </RelativeLayout>
</LinearLayout>